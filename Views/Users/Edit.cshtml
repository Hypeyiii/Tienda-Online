@model User

@{
    ViewData["Title"] = "Edit";
}

<div class="account-section">
    <div class="section-page">
        <a href="/" class="home-text">Home</a>
        <a>/</a>
        <a class="page-text">Account / Edit</a>
    </div>
    <div>
        Welcome! <span class="user">@User.Identity.Name</span>
    </div>
</div>
<section class="details">
    <div class="account-navigate">
        <h4>My Account</h4>
        <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserID">Details of my profile</a>
        <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.UserID">Edit my profile</a>
        <h4>My orders</h4>
        <a asp-controller="Cart" asp-action="MyOrders" asp-route-id="@Model.UserID">My Orders</a>
    </div>
    <div class="account-details">
        <h3 class="account-title">Edit the information of your profile</h3>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" />
            <div class="account-details-container">
                <div class="info-line">
                    <h2 class="user-info-title">First Name</h2>
                    <input asp-for="FirstName" class="user-info-text" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="info-line">
                    <h2 class="user-info-title">Last Name</h2>
                    <input asp-for="LastName" class="user-info-text" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="account-details-container">
                <div class="info-line">
                    <h2 class="user-info-title">Email</h2>
                    <input asp-for="Email" class="user-info-text" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="info-line">
                    <h2 class="user-info-title">Address</h2>
                    <input asp-for="Address" class="user-info-text" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="account-details-container">
                <div class="info-line">
                    <h2 class="user-info-title">City</h2>
                    <input asp-for="City" class="user-info-text" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="info-line">
                    <h2 class="user-info-title">Postal Code</h2>
                    <input asp-for="PostalCode" class="user-info-text" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>
            <div class="account-details-container">
                <div class="info-line">
                    <h2 class="user-info-title">User Name</h2>
                    <input asp-for="UserName" class="user-info-text" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="info-line">
                    <h2 class="user-info-title">Password</h2>
                    <input asp-for="Password" class="user-info-text"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="global-button" />
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

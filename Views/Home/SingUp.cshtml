
@{
    ViewData["Title"] = "SingUp";
}
<style>
    .log-text{
        color: #Db4444;
        text-decoration: none;
        &:hover{
            color: #Db4444;
            text-decoration: underline;
        }
    }
</style>
<div class="section-page">
    <a href="/" class="home-text">Home</a>
    <a>/</a>
    <a class="page-text">Sing In</a>
</div>
<section class="section-register">
    <img src="/img//sing-up.png" alt="Alternate Text" class="register-image"/>
    <div class="sing-up-form">
        <h1 class="sing-up-title">Create an account</h1>
        <p>Enter your details below</p>
        <form class="sing-up-form" method="post">
            <div class="form-group">
                <input type="text" id="name" name="name" class="form-control"
                       placeholder="Name" required />
            </div>
            <div class="form-group">
                <input type="text" id="email" name="email" class="form-control"
                       placeholder="Email" required />
            </div>
            <div class="form-group">
                <input type="password" id="name" name="password" class="form-control"
                       placeholder="Password" required />
            </div>
            <button type="submit" class="global-button btn btn-primary">Sing Up</button>
        </form>
        <p>Already have an account? <a asp-controller="Home" asp-action="LogIn" class="log-text">Log in</a></p>
    </div>
</section>

